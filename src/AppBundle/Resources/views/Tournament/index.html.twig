{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tournament list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Startdate</th>
                <th>Enabled</th>
                <th>Featured</th>
                <th>Teamsquantity</th>
                <th>Payable</th>
                <th>Siginenddate</th>
                <th>Type</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tournament_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.enabled }}</td>
                <td>{{ entity.featured }}</td>
                <td>{{ entity.teamsQuantity }}</td>
                <td>{{ entity.payable }}</td>
                <td>{% if entity.siginEndDate %}{{ entity.siginEndDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.description }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tournament_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tournament_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tournament_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
