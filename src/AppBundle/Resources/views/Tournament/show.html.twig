{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tournament</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ entity.startDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ entity.enabled }}</td>
            </tr>
            <tr>
                <th>Featured</th>
                <td>{{ entity.featured }}</td>
            </tr>
            <tr>
                <th>Teamsquantity</th>
                <td>{{ entity.teamsQuantity }}</td>
            </tr>
            <tr>
                <th>Payable</th>
                <td>{{ entity.payable }}</td>
            </tr>
            <tr>
                <th>Siginenddate</th>
                <td>{{ entity.siginEndDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('tournament') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('tournament_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
