<h1>Rozegrane mecze</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Date</th>
                {% for team in teams %}
                <th>{{ team.name }}</th>
                {% endfor %}
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr><a href="{{ path('game_show', { 'id': entity.id }) }}">
            <td>{% if entity.date %}{{ entity.date|date('Y/m/d h:m') }}{% endif %}</td></a>
            {% for score in entity.scores %}
            <td>{{ score.score }}</td>
        {% endfor %}
    </tr>
{% endfor %}
</tbody>
</table>
