{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            {% for categoryType in categoryTypes %}
                {% set eventCount = 0 %}
                <div class="clearfix"></div>
                <h5>{{ categoryType.name }}</h5>

                {% for event in events %}
                    {% if event.category in categoryType.category %}
                        {% set eventCount = eventCount+1 %}
                        {% if eventCount < 5 %}
                            {% if (eventCount % 4) == 0 %}
                                <div class="row">
                                {% endif %}
                                {% include 'Event/eventThumb.html.twig' %}
                                {% if (eventCount % 4) == 0 %}
                                </div>
                                <a href="{{ path('events_category_list', {'category': event.category.id}) }}" class="button-jumpin pull-right green">Zobacz wiÄ™cej w tej kategorii</a>
                            {% endif %}
                        {% endif %}
                    {% endif %}
                {% endfor %}

            {% endfor %}
        </div>
        <div class="col-md-2"></div>
    </div>
    <script>
        var availableTags = [{% for city in cities %}
            "{{ city.city }}",{% endfor %}
        ];
    </script>
{% endblock %}
