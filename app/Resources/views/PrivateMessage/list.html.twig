{% for message in messages %}
    <li role="presentation">
        <a href="#">
            <p class="small smoked">{{ message.message | truncate(50, true, ' (...)') }}</p>
            <div class="text-center">
            <span class="text-muted small"> Wiadomość od </span> 
            <span class="text-success small">{{ message.createdBy }}</span>
            <span class="text-muted small"> z dnia </span> 
            <span class="text-success small">{{ message.createdAt | date('Y/m/d') }}</span>
            </div>
        </a>
    </li>
    <hr>
{% endfor %}
