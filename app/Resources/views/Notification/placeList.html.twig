<div class="width-220  notifications-menu">
    {% set ifOdd = 0 %}
    {% if notifications | length > 0 %}
        {% for notify in notifications %}
            <div class="row no-margin">
                <a href="#">
                    <li>
                        {% set ifOdd = ifOdd + 1 %}
                        {% for user in notify.user %}
                            <div class="col-md-4 {% if ifOdd % 2 == 0 %} 
                                 pull-right 
                            {% else %}
                                pull-left
                                {% endif %}" >
                                    <img src="{{ user.imageName }}" alt="{{ user.username }}" class="rounded small-thumbnail" />
                                </div>
                                <div class="col-md-8">
                                    <a href="{{ path('show_user',{'id':user.id}) }}">
                                        <span class="text-success small">{{ user.username }}</span>
                                    </a>
                                    {% endfor %}
                                        {% if notify.type == 7 %}
                                            <span class="text-muted small"> chce zarezerwować </span>
                                            {% for place in notify.place %}
                                                <span class="text-primary small"> {{ place.name }} </span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </li> 
                            </a>
                        </div>
                        <hr>
                        {% endfor %}
                            {% else %}
                                <div class="row no-margin">
                                    <a href="#">
                                        <li>
                                            <div class="col-md-12">
                                                <span class="text-muted small text-center"> Brak nowych powiadomień </span>
                                            </div>
                                        <li>
                                    </a>
                                    <hr>
                                </div>
                                {% endif %}
                                </div>
